{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": 0,
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": true
      }
    ],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true,
        "ignoreComments": true
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
        "ignoreComments": true
      }
    ],
    "no-param-reassign": [
      "warn",
      {
        "props": false
      }
    ],
    "func-names": ["error", "never"],
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "comma-dangle": ["error", "never"],
    "strict": 0,
    "no-else-return": 0,
    "eqeqeq": 0,
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "padded-blocks": 0,
    "eol-last": 0,
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-use-before-define": 0,
    "no-undef": 0,
    "class-methods-use-this": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "consistent-return": 0,
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "prefer-arrow-callback": 0,
    "object-shorthand": 0,
    "no-shadow": 0,
    "one-var": 0,
    "one-var-declaration-per-line": ["error", "initializations"],
    "no-tabs": 0,
    "no-dynamic-require": 0,
    "no-useless-escape": "warn",
    "no-control-regex": "warn",
    "no-alert": ["error"],
    "no-console": 0
  }
}
